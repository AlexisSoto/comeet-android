<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="today.comeet.android.comeet.activity.EventDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail de l'événement"
        android:textSize="30dp"
        android:gravity="center"
        android:id="@+id/title_page_event_detail"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom: "
        android:layout_marginTop="67dp"
        android:id="@+id/nameEvent"
        android:textSize="15dp"
        android:layout_below="@+id/title_page_event_detail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date et Heure: "
        android:id="@+id/eventDate"
        android:textSize="15dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/nameEvent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionEvent"
        android:text="Description: "
        android:textSize="15dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/eventDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Itinéraire"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_itineraire"
        android:onClick="btnItineraireOnclick"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localisation: "
        android:id="@+id/eventlocalisation"
        android:textSize="15dp"
        android:layout_below="@+id/descriptionEvent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
